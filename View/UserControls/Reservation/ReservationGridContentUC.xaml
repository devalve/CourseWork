<UserControl x:Class="CourseWork.View.UserControls.ReservationGridContentUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodel="clr-namespace:CourseWork.ViewModel" 
             d:DataContext="{d:DesignInstance Type={x:Type viewmodel:ReservationCanvasVM}}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel x:Name="contentStackPanel">
        <UniformGrid x:Name="contentHeaderGrid"
                         Columns="7"
                DockPanel.Dock="Top" 
                  Height="30" />

        <Grid 
            x:Name="contentGrid"
            Margin="0,20,0,0" 
           >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Tag="Mon"/>
                <ColumnDefinition Tag="Tue"/>
                <ColumnDefinition Tag="Wed"/>
                <ColumnDefinition Tag="Thur"/>
                <ColumnDefinition Tag="Frid"/>
                <ColumnDefinition Tag="Sat"/>
                <ColumnDefinition Tag="Sun"/>
            </Grid.ColumnDefinitions>

        </Grid>

    </DockPanel>
</UserControl>
