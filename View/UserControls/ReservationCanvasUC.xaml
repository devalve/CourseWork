<UserControl x:Class="CourseWork.View.UserControls.ReservationCanvasUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodel="clr-namespace:CourseWork.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:ReservationCanvasVM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>

        <Grid x:Name="headerGrid"
                    
            DockPanel.Dock="Top" 
            Height="70">


            <Image  Source="{Binding UserIconPath}"
                    Width="100" 
                    HorizontalAlignment="Right"
                    />
            <TextBlock Text="{Binding Nickname, ValidatesOnDataErrors=True}" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right" Margin="0,0,100,0"/>
        </Grid>
        <StackPanel x:Name="hoursStackPanel"
            DockPanel.Dock="Left" 
            Width="100">

        </StackPanel>
        <Grid x:Name="contentGrid">

        </Grid>
    </DockPanel>
</UserControl>
